{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    // "outDir": "./dist",
    // "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    // can use import in ts without specifying as * as long as the module is a module
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    // "strict": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "noImplicitReturns": true,
    "noImplicitThis": true
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    // "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
